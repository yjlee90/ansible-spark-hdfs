<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>dfs.replication</name>
        <value>{{ hdfs_replication_factor }}</value>
    </property>

    <property>
         <name>dfs.data.dir</name>
         <value>file://{{ hadoop.data_dir }}</value>
         <final>true</final>
    </property>

    <property>
        <name>dfs.name.dir</name>
        <value>file://{{ hadoop.name_dir }}</value>
        <final>true</final>
    </property>


</configuration>
